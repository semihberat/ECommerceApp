<%- include('partials/header') %>

    <div class="row justify-content-center my-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Kayıt Ol</h4>
                </div>
                <div class="card-body">
                    <form action="/users/register" method="POST">
                        <div class="mb-3">
                            <label for="username" class="form-label">Kullanıcı Adı</label>
                            <input type="text" class="form-control" id="username" name="username"
                                value="<%= typeof values !== 'undefined' && values.username ? values.username : '' %>"
                                required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">E-posta Adresi</label>
                            <input type="email" class="form-control" id="email" name="email"
                                value="<%= typeof values !== 'undefined' && values.email ? values.email : '' %>"
                                required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Şifre</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Şifre Tekrar</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
                                required>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="terms" name="terms" required>
                            <label class="form-check-label" for="terms">
                                <a href="/terms" target="_blank">Kullanım şartlarını</a> ve <a href="/privacy"
                                    target="_blank">gizlilik politikasını</a> kabul ediyorum.
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
                    </form>
                    <div class="mt-3 text-center">
                        <p>Zaten hesabınız var mı? <a href="/users/login">Giriş Yapın</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>